{
  "name": "smoke-alarm",
  "version": "0.1.0",
  "description": "Node package to ping health check endpoints and send alert emails",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "test": "jest --detectOpenHandles",
    "ci-test": "jest --detectOpenHandles --runInBand",
    "lint": "tslint -c tslint.json -p tsconfig.json --fix",
    "clean": "rimraf lib/*",
    "tsc": "tsc",
    "build": "npm-run-all lint clean tsc",
    "prepare": "npm run build",
    "prepublishOnly": "npm test",
    "preversion": "npm run clean",
    "version": "git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mpaulweeks/smoke-alarm.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mpaulweeks/smoke-alarm/issues"
  },
  "homepage": "https://github.com/mpaulweeks/smoke-alarm#readme",
  "dependencies": {
    "@toughlovearena/updater": "^2.1.2",
    "@typed/node": "^6.7.0",
    "@types/jest": "^27.0.2",
    "@types/nodemailer": "^6.4.4",
    "@types/request": "^2.48.7",
    "cross-fetch": "^3.1.4",
    "forever": "^4.0.1",
    "jest": "^27.3.1",
    "node-ses": "^3.0.3",
    "nodemailer": "^6.7.0",
    "nodemon": "^2.0.14",
    "npm-run-all": "^4.1.5",
    "ts-jest": "^27.0.7",
    "tslint": "^6.1.3",
    "typescript": "^4.4.4"
  }
}
